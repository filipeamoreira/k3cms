begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.name = 'k3_core'
    gem.version = '0.1.0'
    gem.date = '2010-08-31'
    gem.summary = 'K3 Framework Core'
    gem.description = 'Provides the basic framework for K3 gems'
    gem.files = Dir["{lib}/**/*", "{bin}/**/*", "{templates}/**/*"]
    gem.executables = ['k3']
    gem.authors = ['John Ash']
    gem.email = ['jash@k3integrations.com']
    gem.homepage = 'http://www.k3integrations.com'
  end
rescue
  puts "Jeweler or one of its dependencies is not installed."
end

task :default do
end
