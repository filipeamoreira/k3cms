begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.name = "k3_pages"
    gem.version = '0.1.0'
    gem.date = '2010-08-31'
    gem.summary = "K3 Static Pages"
    gem.description = 'Provides the ability to create static pages in a website'
    gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*"]
    gem.authors = ['John Ash', 'Tyler Rick']
    gem.email = ['jash@k3integrations.com', 'tyler@k3integrations.com']
    gem.homepage = 'http://www.k3integrations.com'
    gem.add_dependency('k3_core')
    gem.add_development_dependency "rspec", "~> 2.0.0.beta.22"
  end
rescue
  puts "Jeweler or one of its dependencies is not installed."
end


