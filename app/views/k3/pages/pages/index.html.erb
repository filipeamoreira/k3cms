<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= strip_tags page.title %></td>
    <td><%= link_to page.url, page.url %></td>
    <td><%= truncate(page.body, :length => 30) %></td>
    <!--<td><%= link_to 'Show', k3_page_path(page) %></td>-->
    <td><%= link_to 'Edit', pretty_edit_k3_page_path(page) %></td>
    <td><%= link_to 'Destroy', k3_page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

