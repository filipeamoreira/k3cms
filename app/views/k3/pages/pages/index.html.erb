<div class="k3_pages_pages_index">

  <h1>Listing pages</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Body</th>
      <th>Author</th>
      <th></th>
      <th></th>
    </tr>

  <%# TODO: Make this inline-editable %>
  <% @pages.each do |page| %>
    <tr>
      <td><%= strip_tags page.title %></td>
      <td><%= link_to page.url, page.url %></td>
      <td><%= truncate(strip_tags(page.body), :length => 30) %></td>
      <td><%= page.author %></td>
      <td><%= link_to 'Edit', pretty_edit_k3_page_path(page) %></td>
      <td><%= link_to 'Destroy', k3_page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

</div>
