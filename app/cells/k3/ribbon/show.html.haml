= form_for @page, :html => {:id => 'ribbon_new_page_form', :class => 'new_page form hidden'} do |f|
  Title:
  = f.text_field :title
  = f.submit 'Create'

:javascript
  jQuery(function() {
    jQuery('.new_page.button').click(function() {
      console.log('clicked')
      jQuery('.new_page.form').show()
      jQuery('#k3_page_title').focus()
    })
  })

%ul.ribbon
  %li.new_page.button
    New Page

  - if respond_to?(:k3_pages_path)
    %li
      = link_to 'List pages', k3_pages_path

  %li.toggle_edit_mode
    Edit mode: #{{true => 'on', false => 'off'}[edit_mode?]}
    = link_to "Turn #{{false => 'on', true => 'off'}[edit_mode?]}", p=params.merge({:edit => (!edit_mode?).to_s})

  %li.logged_in_as
    Logged in as: An editor


