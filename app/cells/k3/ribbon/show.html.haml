%ul#k3_ribbon
  %ul.row_1

    %li.toggle_edit_mode
      Edit mode: #{{true => 'on', false => 'off'}[edit_mode?]}
      = link_to "Turn #{{false => 'on', true => 'off'}[edit_mode?]}", p=params.merge({:edit => (!edit_mode?).to_s})

    - @opts[:k3_ribbon_items] and @opts[:k3_ribbon_items].each do |item|
      = item

    - if outer_content_for?(:last_saved_status)
      %li#last_saved_status
        = outer_content_for :last_saved_status

  %ul.row_2

.clear

- @opts[:k3_ribbon_drawers] and @opts[:k3_ribbon_drawers].each do |name, drawer|
  = drawer
#k3_ribbon_beneath
